<div class="w-100 my-4">
  <%= form_with(model: game, local: true) do |form| %>
    <% if game.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(game.errors.count, "error") %> prohibited this game from being saved:</h2>

        <ul>
          <% game.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="d-flex justify-content-around">

      <div class="d-flex flex-column mx-2">
        <h3 class="text-primary font-weight-bold">Away Character</h3>
        <%= form.select :away_character, {}, class: "custom-select custom-select-lg mb-3" do %>
          <% Character.all.each do |character| %>
            <%= content_tag(:option, character.name, value: character.id) %>
          <% end %>
        <% end %>
      </div>

      <div class="d-flex flex-column">
        <h3 class="text-primary font-weight-bold">Home Character</h3>
        <%= form.select (:home_character) do %>
          <% Character.all.each do |character| %>
            <%= content_tag(:option, character.name, value: character.id) %>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="w-100 d-flex justify-content-center mt-2">
      <%= form.submit class:"btn btn-primary btn-lg text-white" %>
    </div>

  <% end %>
</div>
