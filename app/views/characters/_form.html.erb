<%= form_with(model: character, local: true) do |form| %>
  <% if character.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(character.errors.count, "error") %> prohibited this character from being saved:</h2>

      <ul>
        <% character.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name, class: "text-primary font-weight-bold" %>
    <%= form.text_field :name, class:"form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :description, class: "text-primary font-weight-bold" %>
    <%= form.text_area :description, class:"form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :life_points, class: "text-primary font-weight-bold" %> <br>
    <%= form.select :life_points, Array(75..125), {}, { class:"form-control" } %>
  </div>

  <div class="form-group">
    <%= form.label :attack_points, class: "text-primary font-weight-bold" %>
    <%= form.select :attack_points, Array(25..50), {}, { class:"form-control" } %>
  </div>

  <div class="w-100 d-flex justify-content-center mt-2">
    <%= form.submit class:"btn btn-primary btn-lg text-white" %>
  </div>
<% end %>
